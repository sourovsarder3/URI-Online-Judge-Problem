#include<iostream>
using namespace std;
int main()
{
    int hour=0, minute=0, second=0, time;
    cin>>time;
    hour = time/3600;
    time = time%3600;
    minute = time/60;
    time = time%60;
    second = time;

    cout<<hour<<":"<<minute<<":"<<second<<endl;
    return 0;
}
