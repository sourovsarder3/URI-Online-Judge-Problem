#include<iostream>
#include<iomanip>
using namespace std;
int main()
{
    string name;
    double SALARY, SOLD, TOTAL;
    getline(cin, name);
    cin>>SALARY>>SOLD;
    TOTAL = SALARY + (SOLD*0.15);
    cout<<fixed<<setprecision(2)<<"TOTAL = R$ "<<TOTAL<<endl;
    return 0;
}
